{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/*.js.map": { "when": "$(basename)"},
        "**/*.js": { "when": "$(basename).ts"}
    },
    "editor.wordWrap": "on",
}