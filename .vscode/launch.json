    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program test",
            "program": "${workspaceFolder}/test.js",
            "outFiles": [
                "${workspaceFolder}/**/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program server",
            "program": "${workspaceFolder}/boot.js",
            "outFiles": [
                "${workspaceFolder}/**/**"
            ]
        },
        {
            "request": "launch",
            "type": "node",
			"name": "Run mocha",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["Tests"],
            "outFiles": [
                "${workspaceFolder}/**/**"
            ]
		}
    ]
}